<!--miniprogram/pages/fyy/form.wxml-->
<cu-custom bgColor="bg-gradual-white" isCustom="{{true}}">
	<view slot="content">广告表单</view>
</cu-custom>
<form bindsubmit="uploadform">
  <view class="cu-form-group">
    <view class="title">imgurl</view>
    <input placeholder="imgurl" name="imgurl" value="{{_data.imgurl}}"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">产品ID</view>
    <input placeholder="id" name="id" value="{{_data.id}}"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">cardID</view>
    <input placeholder="cardid" name="cardid" value="{{_data.cardid}}"></input>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-red margin-tb-sm lg" formType="submit">保存</button>
  </view>
</form>
